<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/bottom_sheet"
    android:background="@drawable/bottom_sheet_menu"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/Choose"
        android:fontFamily="@font/nunitosans_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Choose"
        android:textColor="@color/black"
        android:textSize="26dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/from_gallery"
        android:layout_width="match_parent"
        android:scaleX="0.9"
        android:layout_height="wrap_content"
        android:text="From Gallery"
        android:textSize="20dp"
        android:drawableTint="@color/black"
        android:drawableLeft="@drawable/ic_twotone_image_search_24"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/nunitosans_bold"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/Choose" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/from_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingBottom="40dp"
        android:drawableTint="@color/black"
        android:drawableLeft="@drawable/ic_baseline_photo_camera_24"
        android:fontFamily="@font/nunitosans_bold"
        android:gravity="center"
        android:scaleX="0.9"
        android:text="From Camera"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/from_gallery" />
</androidx.constraintlayout.widget.ConstraintLayout>